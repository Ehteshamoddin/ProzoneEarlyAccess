<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pro2">
    <TextView
        android:id="@+id/headline"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Digital Library Application"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="415dp"
        android:layout_height="206dp"
        android:fontFamily="monospace"
        android:paddingStart="20dp"
        android:text="@string/books_are_most_important_for_a_student_and_if_can_be_gathered_at_one_place_it_will_be_very_helpful_this_app_contains_number_of_books_which_are_needed_for_a_student_in_college_classified_subject_wise_the_app_is_created_using_android_studio"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/res2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/mic"
        android:textAlignment="center"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:text="Download Resources"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>