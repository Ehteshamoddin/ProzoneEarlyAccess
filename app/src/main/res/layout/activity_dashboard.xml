<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/dahsboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/projects"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/round_bg2"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="12dp"
        android:text="Projects"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/freebies"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/round_bg2"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="12dp"
        android:text="Freebies"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projects"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/more"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/round_bg2"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="12dp"
        android:text="More"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/freebies"
        app:layout_constraintVertical_bias="0.643" />

    <TextView
        android:id="@+id/upload"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/round_bg2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:textSize="30sp"
        android:text="Upload"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/freebies" />

</androidx.constraintlayout.widget.ConstraintLayout>