<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pro5">
    <TextView
        android:id="@+id/headline"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Near Health Website"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="415dp"
        android:layout_height="206dp"
        android:fontFamily="monospace"
        android:paddingStart="20dp"
        android:text="@string/a_website_which_provides_a_platform_which_connects_the_hospitals_that_are_nearby_to_the_patient_this_project_requires_internet_connection_as_it_runs_dynamically_this_application_stores_review_of_user_account_information_in_the_database_server_this_web_application_merges_many_applications_like_nearest_search_of_hospital_address_and_phone_no_of_hospital_specializations_of_hospitals_and_doctors_appointment_etc_so_it_becomes_more_convenient_to_user"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/res5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/mic"
        android:textAlignment="center"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:text="Download Resources"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>